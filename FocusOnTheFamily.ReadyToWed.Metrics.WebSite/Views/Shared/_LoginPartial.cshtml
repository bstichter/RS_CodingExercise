@if (User?.Identity?.IsAuthenticated ?? false) {
  var emailAddress = User.Claims.Where(x => x.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress").Single().Value;
  var userName = User.Identity.Name;
  <ul class="nav navbar-nav navbar-right">
    <li><a href="https://github.com/@userName">@userName (@emailAddress)</a></li>
    <li><a asp-area="" asp-controller="Home" asp-action="Logout">Log Out</a></li>
  </ul>
} else {
  <ul class="nav navbar-nav navbar-right">
    <li><a asp-area="" asp-controller="Home" asp-action="Login">Log In</a></li>
  </ul>
}
